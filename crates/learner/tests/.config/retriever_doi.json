{
    "name": "doi",
    "base_url": "https://api.crossref.org/works",
    "source": "doi",
    "pattern": "(?:^|https?://doi\\.org/)(10\\.\\d{4,9}/[-._;()/:\\w]+)$",
    "endpoint_template": "https://api.crossref.org/works/{identifier}",
    "response_format": {
        "type": "json",
        "field_maps": {
            "title": {
                "paths": [
                    "message/title"
                ]
            },
            "abstract": {
                "paths": [
                    "message/abstract"
                ],
                "transform": {
                    "type": "Replace",
                    "pattern": "<[^>]+>",
                    "replacement": ""
                }
            },
            "authors": {
                "paths": [
                    "message/author"
                ]
            },
            "publication_date": {
                "paths": [
                    "message/created/date-time"
                ],
                "transform": {
                    "type": "Date",
                    "from_format": "%Y-%m-%d",
                    "to_format": "%Y-%m-%dT00:00:00Z"
                }
            },
            "pdf_url": {
                "paths": [
                    "message/link/0/URL",
                    "message/resource/primary/URL"
                ]
            },
            "doi": {
                "paths": [
                    "message/DOI"
                ]
            }
        }
    },
    "headers": {
        "User-Agent": "learner/0.7.0 (https://github.com/yourusername/learner)",
        "Accept": "application/json"
    }
}